# FaceStream Backend Configuration
# Copy this file to .env and update with your actual values

# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Configuration
# Format: postgresql://username:password@host:port/database
# Example for local PostgreSQL:
DATABASE_URL=postgresql://postgres:password@localhost:5432/facestream

# Example for Railway PostgreSQL:
# DATABASE_URL=postgresql://user:pass@containers-us-west-xxx.railway.app:5432/railway

# WebSocket Settings
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30

# Face Recognition Settings (for Phase 2)
FACE_RECOGNITION_MODEL=hog
FACE_MATCH_THRESHOLD=0.6
FACE_CONFIDENCE_THRESHOLD=0.85

# Frame Processing Settings
MAX_FRAME_RATE=5
MIN_FACE_SIZE=100

# Security & Authentication
SECRET_KEY=change-this-secret-key-in-production-use-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ADMIN_PASSWORD=admin123

# Redis Cache (Optional - for performance)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=False
CACHE_TTL=3600

